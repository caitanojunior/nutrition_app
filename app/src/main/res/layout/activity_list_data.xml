<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5FCC2"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".db.ListData">


    <LinearLayout
        android:id="@+id/headerLayoutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="05dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.40"
            android:text="NAME" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/headerLayoutQuant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quantItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.40"
            android:text="QUANT" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/headerLayoutUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/unitItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.40"
            android:text="UNIT" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/headerLayoutCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/caloriesItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.40"
            android:text="KCAL" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_below="@id/headerLayoutQuant"
        android:cacheColorHint="#00000000"></ListView>
</RelativeLayout>



